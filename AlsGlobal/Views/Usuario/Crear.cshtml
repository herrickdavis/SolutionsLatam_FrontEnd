@model CrearUsuarioRequestViewModel
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    var empresas = (IEnumerable<SelectListItem>)ViewBag.Empresas;
    var roles = (IEnumerable<SelectListItem>)ViewBag.Roles;
    var idiomas = (IEnumerable<SelectListItem>)ViewBag.Idiomas;
}
<div class="card card-custom gutter-b">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                @SharedLocalizer["CrearUsuario.Titulo"]
            </h3>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label"> @SharedLocalizer["CrearUsuario.Nombre"]</label>
                    <input type="text" class="form-control" asp-for="nombre"/>
                </div>
                <div class="form-group">
                    <label class="form-label"> @SharedLocalizer["CrearUsuario.Email"]</label>
                    <input type="email" class="form-control" asp-for="email"/>
                </div>
                <div class="form-group">
                    <label class="form-label"> @SharedLocalizer["CrearUsuario.Contrase√±a"]</label>
                    <div class="input-group">
                        <input class="form-control" asp-for="password"/>
                        <div class="input-group-append">
                            <button class="btn btn-primary btn-generar" type="button" title="@SharedLocalizer["CrearUsuario.GenerarContrasena"]">
                                <i class="flaticon-refresh"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label"> @SharedLocalizer["CrearUsuario.Empresas"]</label>
                    @Html.DropDownList("id_empresas", empresas, new
                    {
                        @class = "form-control select2",
                        @multiple="true"
                    })
                </div>  
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label"> @SharedLocalizer["CrearUsuario.Rol"]</label>
                    @Html.DropDownList("id_rol", roles, new
                    {
                        @class = "form-control selectpicker",
                        @data_size = "7",
                        @title = SharedLocalizer["ValorDefectoSelect"]
                    })
                </div>  
                <div class="form-group">
                    <label class="form-label"> @SharedLocalizer["CrearUsuario.Idioma"]</label>
                    @Html.DropDownList("idioma", idiomas, new
                    {
                        @class = "form-control selectpicker",
                        @data_size = "7",
                        @title = SharedLocalizer["ValorDefectoSelect"]
                    })
                </div>
                <div class="form-group">
                    <label class="form-label"> @SharedLocalizer["CrearUsuario.DataCampo"]</label>
                    <select class="form-control" asp-for="data_campo">
                        <option>@SharedLocalizer["ValorDefectoSelect"]</option>
                        <option value="S">Si</option>
                        <option value="N">No</option>
                    </select>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">@SharedLocalizer["CrearUsuario.VerMuestras"]</label>
                            <label class="checkbox">
                                <input type="checkbox" checked="checked" asp-for="ver_empresa_solicitante"/>
                                <span></span>
                                &nbsp;
                                @SharedLocalizer["CrearUsuario.VerEmpresaSolicitante"]
                            </label>
                        </div>
                        <div class="form-group">
                            <label class="checkbox">
                                <input type="checkbox" asp-for="ver_contacto_solicitante"/>
                                <span></span>
                                &nbsp;
                                @SharedLocalizer["CrearUsuario.VerContactoSolicitante"]
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6 pt-2">
                        <div class="form-group">
                             <label class="form-label"></label>
                            <label class="checkbox">
                                <input type="checkbox" asp-for="ver_empresa_contratante"/>
                                <span></span>
                                 &nbsp;
                                @SharedLocalizer["CrearUsuario.VerEmpresaContratante"]
                            </label>
                        </div>
                        <div class="form-group">
                            <label class="checkbox">
                                <input type="checkbox" asp-for="ver_contacto_contratante"/>
                                <span></span>
                                 &nbsp;
                                @SharedLocalizer["CrearUsuario.VerContactoContratante"]
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <button class="btn btn-primary" id="btnCrear">@SharedLocalizer["CrearUsuario.Crear"]</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        var urlCrear = "@Url.Action("Crear", "Usuario")";
        var placeholder = "@SharedLocalizer["ValorDefectoSelect"]";
        var urlGenerarContrasena = "@Url.Action("GenerarContrasena", "Usuario")";
    </script>
    <script src="~/js/usuario/crearUsuario.js" asp-append-version="true"></script>
}